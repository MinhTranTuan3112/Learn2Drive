<body>
    <section class="container">
        <aside>
            <div class="top">
                <div class="logo">
                    <img src="~/img/logo.png" class="img-fluid" alt="logo" style="height: 24px;width: 24px;">
                    <h2 class="te">Learn<span class="danger">2</span>Drive</h2>
                </div>
                <div class="close" id="close-btn">
                    <span class="material-symbols-outlined">
                        close
                    </span>
                </div>
            </div>

            <!--Sidebar-->
            <div class="sidebar-menu" id="sidebar-menu">
                <!--First-->
                <a href="/Manage">
                    <span class="material-symbols-outlined">
                        grid_view
                    </span>
                    <h3 class="lead">Trang Chủ</h3>
                </a>
                <!--First-->
                <a href="/Manage/UserList" class="sidebar-menu-item active">
                    <span class="material-symbols-outlined">
                        person
                    </span>
                    <h3 class="lead">Các Người Dùng</h3>
                </a>
                <!--First-->
                <a href="/Manage/QuizList" class="sidebar-menu-item">
                    <span class="material-symbols-outlined">
                        receipt_long
                    </span>
                    <h3 class="lead">Các Bộ Đề</h3>
                </a>
                <!--First-->
                <a href="" class="sidebar-menu-item">
                    <span class="material-symbols-outlined">
                        quiz
                    </span>
                    <h3 class="lead">Ngân Hàng Câu Hỏi</h3>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        mail
                    </span>
                    <h3 class="lead">Analytics</h3>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        inventory
                    </span>
                    <h3 class="lead">Message</h3>
                    <span class="message-count">26</span>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        add
                    </span>
                    <h3 class="lead">Products</h3>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        report_gmailerrorred
                    </span>
                    <h3 class="lead">Reports</h3>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        settings
                    </span>
                    <h3 class="lead">Settings</h3>
                </a>

                <!--Home-Page-->
                <a href="home.html" class="sidebar-menu-item">
                    <span class="material-symbols-outlined">
                        home
                    </span>
                    <h3 class="lead">Home Page</h3>
                </a>

                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        logout
                    </span>
                    <h3 class="lead">Logout</h3>
                </a>
            </div>
        </aside>

        <main>
            <div class="recent-order-list mt-3">
                <h2 class="title" style="text-align: center; font-weight: bold;">Tạo Tài Khoản Mới</h2>
                <br />

                <form asp-controller="User" asp-action="Create">
                    <div class="form-group">
                        <label for="username" class="control-label">Tài Khoản</label>
                        <input id="username" name="username" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="password" class="control-label">Mật Khẩu</label>
                        <input id="password" name="password" type="password" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="fullname" class="control-label">Họ Tên</label>
                        <input id="fullname" name="fullname" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="email" class="control-label">Địa Chỉ Email</label>
                        <input id="email" name="email" type="email" class="form-control" required />
                    </div>

                    <div class="form-group mt-5" style="display: flex;justify-content: space-between;">
                        <input type="submit" value="Đồng Ý Và Tạo" class="btn btn-outline-success mb-3" style="width: 49%;" />
                        <a href="/Manage/UserList" class="btn btn-outline-danger mb-3" style="width: 49%; margin:0">Hủy Bỏ</a>
                    </div>
                </form>

            </div>
        </main>

    </section>

    <script src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js'></script>
    <script src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js'></script>
</body>
</html>
