@model User
@{
    Layout = null;
    ViewData["Title"] = "Edit";
    bool hasImage = (Model is not null && !string.IsNullOrEmpty(Model.Avatar));
    string imagePath = (hasImage) ? $"/img/Avatar/{Model.Avatar}" : null;
    bool hasBirthDate = (Model is not null && Model.BirthDate.HasValue);
    string FormattedBirthDate = (hasBirthDate) ? string.Format("{0:yyyy-MM-dd}", Model.BirthDate) : null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--MATERIAL ICONS CSS-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@40,600,0,0" />
    <!--font css files-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!--<link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@200;300&display=swap" rel="stylesheet">-->
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@300&display=swap" rel="stylesheet">
    <!--bootstrap css file-->
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous"> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <!--STYLE CSS-->
    <link rel="stylesheet" href="~/css/styleManageQuizUser.css">
    <!--Browser Icon-->
    <link rel="icon" href="https://cdn-icons-png.flaticon.com/512/4919/4919646.png">
    <title>Update Quiz</title>
</head>

<body>
    <section class="container">
        <aside>
            <div class="top">
                <div class="logo">
                    <img src="~/img/logo.png" class="img-fluid" alt="logo" style="height: 24px;width: 24px;">
                    <h2 class="te">Learn<span class="danger">2</span>Drive</h2>
                </div>
                <div class="close" id="close-btn">
                    <span class="material-symbols-outlined">
                        close
                    </span>
                </div>
            </div>

            <!--Sidebar-->
            <div class="sidebar-menu" id="sidebar-menu">
                <!--First-->
                <a href="/Manage">
                    <span class="material-symbols-outlined">
                        grid_view
                    </span>
                    <h3 class="lead">Trang Chủ</h3>
                </a>
                <!--First-->
                <a href="/Manage/UserList" class="sidebar-menu-item active">
                    <span class="material-symbols-outlined">
                        person
                    </span>
                    <h3 class="lead">Các Người Dùng</h3>
                </a>
                <!--First-->
                <a href="/Manage/QuizList" class="sidebar-menu-item">
                    <span class="material-symbols-outlined">
                        receipt_long
                    </span>
                    <h3 class="lead">Các Bộ Đề</h3>
                </a>
                <!--First-->
                <a href="" class="sidebar-menu-item">
                    <span class="material-symbols-outlined">
                        quiz
                    </span>
                    <h3 class="lead">Ngân Hàng Câu Hỏi</h3>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        mail
                    </span>
                    <h3 class="lead">Analytics</h3>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        inventory
                    </span>
                    <h3 class="lead">Message</h3>
                    <span class="message-count">26</span>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        add
                    </span>
                    <h3 class="lead">Products</h3>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        report_gmailerrorred
                    </span>
                    <h3 class="lead">Reports</h3>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        settings
                    </span>
                    <h3 class="lead">Settings</h3>
                </a>

                <!--Home-Page-->
                <a href="home.html" class="sidebar-menu-item">
                    <span class="material-symbols-outlined">
                        home
                    </span>
                    <h3 class="lead">Home Page</h3>
                </a>

                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        logout
                    </span>
                    <h3 class="lead">Logout</h3>
                </a>
            </div>
        </aside>

        <main>
            <div class="recent-order-list mt-3">
                <h1 class="title" style="text-align: center;font-weight: bold;">Cập nhật thông tin</h1>
                <hr />
                <section class="profile-user-section container-xl px-4 mt-4 hidden-load">
                    <form action="/User/Edit" class="needs-validation hidden-load info-form" method="post" enctype="multipart/form-data" novalidate>
                        <div class="row">
                            <input type="hidden" name="UserId" value="@Model.UserId" />
                            <div class="col-xl-4 hidden-load">
                                <div class="card mb-4 mb-xl-0">
                                    <div class="card-header text-center" style="font-weight: bold;">
                                        <h4>Profile Picture</h4>
                                    </div>
                                    <div class="card-body text-center">
                                        <img class="img-account-profile rounded-circle mb-2"
                                             src="@((hasImage ? imagePath : "https://icon-library.com/images/anonymous-avatar-icon/anonymous-avatar-icon-25.jpg"))" alt="avatar">
                                        <div class="card-body-content text-muted mb-4">
                                            JPG or PNG (less than 5MB)
                                        </div>
                                        <input type="file" name="Avatar" oninput="changeAvatar(this);" accept="jpg/png/jpeg/webp" class="form-control">
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-8 hidden-load">
                                <div class="card mb-4">
                                    <div class="card-header text-center" style="font-weight: bold;">
                                        <h4>Account Details</h4>
                                    </div>
                                    <div class="card-body hidden-load">
                                        <!--FullName-->
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="FullName" type="text" name="FullName" value="@Model.FullName"
                                                   placeholder="Enter Fullname">
                                            <label class="form-label" for="FullName">Họ và tên</label>
                                        </div>

                                        <div class="row gx-2 mb-3">
                                            <!--DOB-->
                                            <div class="form-floating col-6">
                                                <input class="form-control" id="BirthDate" name="BirthDate" type="date" value="@((hasBirthDate ? FormattedBirthDate : ""))"
                                                       placeholder="Enter Birthdate">
                                                <label class="form-label" for="BirthDate">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15"
                                                         fill="currentColor" class="mb-1 bi bi-calendar-event" viewBox="0 0 16 16">
                                                        <path d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z" />
                                                        <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                                                    </svg> Ngày/tháng/năm sinh
                                                </label>
                                            </div>
                                            <!--CCCD-->
                                            <div class="form-floating col-6 mb-3">
                                                <input type="text" class="form-control" name="CCCD" value="@Model.Cccd" id="CCCD" placeholder="CCCD">
                                                <label for="CCCD" class="form-label">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                                         class="mb-1 bi bi-person-vcard" viewBox="0 0 16 16">
                                                        <path d="M5 8a2 2 0 1 0 0-4 2 2 0 0 0 0 4Zm4-2.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5ZM9 8a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4A.5.5 0 0 1 9 8Zm1 2.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5Z" />
                                                        <path d="M2 2a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H2ZM1 4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H8.96c.026-.163.04-.33.04-.5C9 10.567 7.21 9 5 9c-2.086 0-3.8 1.398-3.984 3.181A1.006 1.006 0 0 1 1 12V4Z" />
                                                    </svg> CCCD
                                                </label>
                                            </div>
                                        </div>

                                        <!--ENTER Number-->
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" type="tel"
                                                   placeholder="Enter Number" pattern="/(|0[3|5|7|8|9])+([0-9]{8})\b/g">
                                            <label class="form-label" for="PhoneNumber">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14"
                                                     fill="currentColor" class="mb-1 bi bi-telephone" viewBox="0 0 16 16">
                                                    <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z" />
                                                </svg> Số điện thoại
                                            </label>
                                            <div class="invalid-feedback">
                                                Vui lòng nhập số điện thoại hợp lệ
                                            </div>
                                        </div>
                                        <!--Email-->
                                        <div class="form-floating mb-3 has-validation">
                                            <input class="form-control" id="Email" name="Email" value="@Model.Email" type="email" placeholder="name@example.com"
                                                   required>
                                            <label for="Email" class="form-label">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                                     class="mb-1 bi bi-envelope-at" viewBox="0 0 16 16">
                                                    <path d="M2 2a2 2 0 0 0-2 2v8.01A2 2 0 0 0 2 14h5.5a.5.5 0 0 0 0-1H2a1 1 0 0 1-.966-.741l5.64-3.471L8 9.583l7-4.2V8.5a.5.5 0 0 0 1 0V4a2 2 0 0 0-2-2H2Zm3.708 6.208L1 11.105V5.383l4.708 2.825ZM1 4.217V4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v.217l-7 4.2-7-4.2Z" />
                                                    <path d="M14.247 14.269c1.01 0 1.587-.857 1.587-2.025v-.21C15.834 10.43 14.64 9 12.52 9h-.035C10.42 9 9 10.36 9 12.432v.214C9 14.82 10.438 16 12.358 16h.044c.594 0 1.018-.074 1.237-.175v-.73c-.245.11-.673.18-1.18.18h-.044c-1.334 0-2.571-.788-2.571-2.655v-.157c0-1.657 1.058-2.724 2.64-2.724h.04c1.535 0 2.484 1.05 2.484 2.326v.118c0 .975-.324 1.39-.639 1.39-.232 0-.41-.148-.41-.42v-2.19h-.906v.569h-.03c-.084-.298-.368-.63-.954-.63-.778 0-1.259.555-1.259 1.4v.528c0 .892.49 1.434 1.26 1.434.471 0 .896-.227 1.014-.643h.043c.118.42.617.648 1.12.648Zm-2.453-1.588v-.227c0-.546.227-.791.573-.791.297 0 .572.192.572.708v.367c0 .573-.253.744-.564.744-.354 0-.581-.215-.581-.8Z" />
                                                </svg> Email
                                            </label>
                                            <div class="invalid-feedback">
                                                Vui lòng nhập email phù hợp
                                            </div>
                                        </div>

                                        <!--Address-->
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="Address" name="Address" type="text" value="@Model.Address"
                                                   placeholder="Enter Address">
                                            <label for="Address" class="form-label">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                                     class="mb-1 bi bi-geo-alt" viewBox="0 0 16 16">
                                                    <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z" />
                                                    <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                                                </svg> Địa chỉ
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mt-5" style="display: flex;justify-content: space-between;">
                                <input type="submit" value="Lưu thay đổi" class="btn btn-outline-success mb-3" style="width: 30%;" />
                                <a href="/Manage/UserDetail?userid=@Model.UserId" class="btn btn-outline-danger mb-3" style="margin:0;width: 30%;">Hủy thay đổi</a>
                                <a href="/Manage/UserList" class="btn btn-outline-primary mb-3" style="margin:0;width: 30%;">Về danh sách</a>
                            </div>
                        </div>
                    </form>
                </section>


                <form asp-controller="User" asp-action="Edit" id="user-form" onsubmit="submitForm();">
                    <div class="form-group">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>

                    
                </form>
                <hr />
            </div>
        </main>
    </section>
    <script src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js'></script>
    <script src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js'></script>
</body>
</html>