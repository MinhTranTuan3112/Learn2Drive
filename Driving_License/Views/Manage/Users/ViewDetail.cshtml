@model User
@{
    Layout = null;
    ViewData["Title"] = "Details";
    var quiz = ViewBag.quiz;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--MATERIAL ICONS CSS-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@40,600,0,0" />
    <!--font css files-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!--<link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@200;300&display=swap" rel="stylesheet">-->
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@300&display=swap" rel="stylesheet">
    <!--bootstrap css file-->
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous"> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <!--STYLE CSS-->
    <link rel="stylesheet" href="~/css/styleManageQuizUser.css">
    <!--Browser Icon-->
    <link rel="icon" href="https://cdn-icons-png.flaticon.com/512/4919/4919646.png">
    <title>User Detail</title>
</head>

<body>
    <section class="container">
        <aside>
            <div class="top">
                <div class="logo">
                    <img src="~/img/logo.png" class="img-fluid" alt="logo" style="height: 24px;width: 24px;">
                    <h2 class="te">Learn<span class="danger">2</span>Drive</h2>
                </div>
                <div class="close" id="close-btn">
                    <span class="material-symbols-outlined">
                        close
                    </span>
                </div>
            </div>

            <!--Sidebar-->
            <div class="sidebar-menu" id="sidebar-menu">
                <!--First-->
                <a href="/Manage">
                    <span class="material-symbols-outlined">
                        grid_view
                    </span>
                    <h3 class="lead">Trang Chủ</h3>
                </a>
                <!--First-->
                <a href="/Manage/UserList" class="sidebar-menu-item active">
                    <span class="material-symbols-outlined">
                        person
                    </span>
                    <h3 class="lead">Các Người Dùng</h3>
                </a>
                <!--First-->
                <a href="/Manage/QuizList" class="sidebar-menu-item">
                    <span class="material-symbols-outlined">
                        receipt_long
                    </span>
                    <h3 class="lead">Các Bộ Đề</h3>
                </a>
                <!--First-->
                <a href="" class="sidebar-menu-item">
                    <span class="material-symbols-outlined">
                        quiz
                    </span>
                    <h3 class="lead">Ngân Hàng Câu Hỏi</h3>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        mail
                    </span>
                    <h3 class="lead">Analytics</h3>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        inventory
                    </span>
                    <h3 class="lead">Message</h3>
                    <span class="message-count">26</span>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        add
                    </span>
                    <h3 class="lead">Products</h3>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        report_gmailerrorred
                    </span>
                    <h3 class="lead">Reports</h3>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        settings
                    </span>
                    <h3 class="lead">Settings</h3>
                </a>

                <!--Home-Page-->
                <a href="home.html" class="sidebar-menu-item">
                    <span class="material-symbols-outlined">
                        home
                    </span>
                    <h3 class="lead">Home Page</h3>
                </a>

                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        logout
                    </span>
                    <h3 class="lead">Logout</h3>
                </a>
            </div>
        </aside>

        <main>
            <div class="recent-order-list mt-3">
                <h1 class="title" style="text-align: center;font-weight: bold;">Thông Tin Cơ Bản</h1>
                <table>
                    <tbody>
                        <tr>
                            <td><strong>Ảnh Hồ Sơ</strong></td>
                            <td><img src="~/img/user/user.png" class="mt-3 mb-3" style="max-height:100px; max-width:100px; border-radius:100%" />
                        </tr>
                        <tr>
                            <td><strong>Họ và tên</strong></td>
                            <td>@Model.FullName</td>
                        </tr>
                        <tr>
                            <td><strong>Ngày sinh</strong></td>
                            <td>@Model.BirthDate</td>
                        </tr>
                        <tr>
                            <td><strong>Số CCCD</strong></td>
                            <td>@Model.Cccd</td>
                        </tr>
                        <tr>
                            <td><strong>Số điện thoại</strong></td>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                        <tr>
                            <td><strong>Địa chỉ Email</strong></td>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <td><strong>Địa chỉ liên lạc</strong></td>
                            <td>@Model.Address</td>
                        </tr>
                        <tr>
                            <td><strong>Quốc tịch</strong></td>
                            <td>@Model.Nationality</td>
                        </tr>
                    </tbody>
                </table>
                <br />
                <br />
                <div><h1 class="title" style="text-align: center;font-weight: bold;">Thông Tin Tài Khoản</h1></div>

                <div style="width: 100%;border-collapse: collapse;border-radius: 10px;overflow: hidden;background-color: white;">
                    <div class="info-container">
                        <div><strong>Tài khoản</strong></div>
                        <div>@Model.Account.Username</div>
                    </div>
                    <div class="info-container">
                        <div><strong>Mật khẩu</strong></div>
                        <div>@Model.Account.Password</div>
                    </div>
                    <div class="info-container">
                        <div><strong>Loại tài khoản</strong></div>
                        <div>@Model.Account.Role</div>
                    </div>
                </div>
                <style>
                    .info-container {
                        display: flex;
                        justify-content:space-between;
                        align-items: center;
                        width: 100%;
                        background-color: white;
                        border-radius: 10px;
                        padding: 10px;
                    }
                    .info-container div {
                        display:flex;
                        font-size: 15px;
                    }
                </style>
                <hr />
                <div class="form-group mt-1" style="display: flex;justify-content: space-between;">
                    <a href="/User/Edit?userid=@Model.UserId" class="btn btn-outline-primary mb-3" style="margin:0;width: 30%;">Sửa đổi</a>
                    <button onclick="doDelete('@Model.UserId');" class="btn btn-outline-danger mb-3" style="margin:0;width: 30%;">Xóa</button>
                    <a href="/Manage/UserList" class="btn btn-outline-primary mb-3" style="margin:0;width: 30%;">Về danh sách</a>
                </div>
            </div>
        </main>
    </section>

    <script src="~/js/ManageUser.js"></script>
    <script src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js'></script>
    <script src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js'></script>
</body>
</html>