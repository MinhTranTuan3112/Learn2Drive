@using Driving_License.Models;
@{
    var quizList = ViewBag.QuizList as List<Quiz>;
    var licenseid = ViewBag.licenseid as string;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--bootstrap css file-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <!--font css files-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@200;300&display=swap" rel="stylesheet">

    <!--custom css file-->
    <link rel="stylesheet" href="~/css/styleQuizResult.css">
    <!--icon-->
    <link rel="icon" href="https://cdn-icons-png.flaticon.com/512/4832/4832401.png">
    <title>Quiz List</title>
</head>

<body>
    <div class="container shadow-lg p-3 mb-5 bg-body-tertiary rounded">
        <h1 class="title" style="text-align: center;display: block;">Danh sách đề</h1>

        <div class="buttons" style="display: flex;justify-content: space-between;">
            <a asp-action="" class="btn btn-outline-primary mb-3">Về Trang Chủ</a>
            <a asp-action="CreateQuiz" class="btn btn-outline-primary mb-3">Tạo đề mới</a>
        </div>
        <table class="table table-hover table-light text-center table-responsive">
            <thead>
                <tr>
                    <th>
                        Tên bộ đề
                    </th>
                    <th>
                        Hạng bằng lái
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in quizList)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.LicenseId</td>
                        <td>
                            <a href="/Manage/QuizDetail?quizid=@item.QuizId" class="btn btn-outline-primary mb-3"
                               style="display: block;width: 50%;">Chi tiết</a>
                            <button onclick="doDelete(`@item.QuizId`);" class="btn btn-outline-danger" style=" display: block;width: 50%;">Xóa</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="~/js/DeleteQuiz.js"></script>
    <script src="~/js/LoadAnimations.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script>
</body>
</html>