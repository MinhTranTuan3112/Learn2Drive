</head>

<body>
    <section class="container">
        <aside>
            <div class="top">
                <div class="logo">
                    <img src="~/img/logo.png" class="img-fluid" alt="logo" style="height: 24px;width: 24px;">
                    <h2 class="te">Learn<span class="danger">2</span>Drive</h2>
                </div>
                <div class="close" id="close-btn">
                    <span class="material-symbols-outlined">
                        close
                    </span>
                </div>
            </div>

            <!--Sidebar-->
            <div class="sidebar-menu" id="sidebar-menu">
                <!--First-->
                <a href="/Manage">
                    <span class="material-symbols-outlined">
                        grid_view
                    </span>
                    <h3 class="lead">Trang Chủ</h3>
                </a>
                <!--First-->
                <a href="/Manage/UserList">
                    <span class="material-symbols-outlined">
                        person
                    </span>
                    <h3 class="lead">Các Người Dùng</h3>
                </a>
                <!--First-->
                <a href="/Manage/QuizList" class="active">
                    <span class="material-symbols-outlined">
                        <span class="material-symbols-outlined">
                            quiz
                        </span>
                    </span>
                    <h3 class="lead">Các Bộ Đề</h3>
                </a>
                <!--First-->
                <a href="" class="sidebar-menu-item">
                    <span class="material-symbols-outlined">
                        receipt_long
                    </span>
                    <h3 class="lead">Orders</h3>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        mail
                    </span>
                    <h3 class="lead">Analytics</h3>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        inventory
                    </span>
                    <h3 class="lead">Message</h3>
                    <span class="message-count">26</span>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        add
                    </span>
                    <h3 class="lead">Products</h3>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        report_gmailerrorred
                    </span>
                    <h3 class="lead">Reports</h3>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        settings
                    </span>
                    <h3 class="lead">Settings</h3>
                </a>

                <!--Home-Page-->
                <a href="home.html" class="sidebar-menu-item">
                    <span class="material-symbols-outlined">
                        home
                    </span>
                    <h3 class="lead">Home Page</h3>
                </a>

                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        logout
                    </span>
                    <h3 class="lead">Logout</h3>
                </a>
            </div>
        </aside>

        <main>
            <div class="recent-order-list mt-3">
                <h2 class="title" style="text-align: center; font-weight: bold;">Tạo Đề Mới</h2>
                <br />

                <form asp-controller="Quiz" asp-action="Create">
                    <div class="form-group">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <label asp-for="LicenseId" class="control-label">Hạng bằng lái</label>
                        <select asp-for="LicenseId" class="form-control" asp-items="ViewBag.LicenseId"></select>
                    </div>

                    <div class="form-group">
                        <label for="quizName" class="control-label">Tên bộ đề</label>
                        <input id="quizName" name="quizName" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Thông tin thêm</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="quantity" class="control-label">Số lượng câu hỏi</label>
                        <input id="quantity" name="quantity" class="form-control" type="number" required min="25" />
                    </div>

                    <div class="form-group mt-5" style="display: flex;justify-content: space-between;">
                        <input type="submit" value="Đồng Ý Và Tạo" class="btn btn-outline-success mb-3" style="width: 49%;" />
                        <a href="/Manage/QuizList" class="btn btn-outline-danger mb-3" style="width: 49%; margin:0">Hủy Bỏ</a>
                    </div>
                </form>
            </div>
        </main>

    </section>

    <script src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js'></script>
    <script src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js'></script>
    <script src="JS/pagingtesting.js"></script>
</body>
</html>
