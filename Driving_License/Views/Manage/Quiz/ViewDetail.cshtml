@model Driving_License.Models.Quiz

@{
    ViewData["Title"] = "Details";
    List<Question> questList = Model.Questions.ToList();

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--bootstrap css file-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <!--font css files-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@200;300&display=swap" rel="stylesheet">

    <!--custom css file-->
    <link rel="stylesheet" href="~/css/styleQuizResult.css">
    <!--icon-->
    <link rel="icon" href="https://cdn-icons-png.flaticon.com/512/4832/4832401.png">
    <title>Quiz Detail</title>
</head>

<body>
    <div class="container shadow-lg p-3 mb-5 bg-body-tertiary rounded">
        <h1 class="title" style="text-align: center;display: block;">Thông Tin Chi Tiết</h1>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Tên bộ đề
                </dt>
                <dd class="col-sm-10">
                    @Model.Name
                </dd>

                <dt class="col-sm-2">
                    Hạng bằng lái
                </dt>
                <dd class="col-sm-10">
                    @Model.LicenseId
                </dd>

                <dt class="col-sm-2">
                    Thông tin thêm
                </dt>
                <dd class="col-sm-10">
                    @Model.Description
                </dd>
            </dl>

            <dl class="col-sm-2">
                <dt>
                    Các câu hỏi của đề:
                </dt>
                @{
                    int n = 1;
                    foreach (var item in questList)
                    {
                        <dt>Câu @n</dt>
                        <dd>
                            @item.QuestionText
                        </dd>
                        n++;
                    }
                }
            </dl>
        </div>

        <div class="buttons" style="display: flex;justify-content: space-between;">
            <a href="/Quiz/Edit?quizid=@Model?.QuizId" class="btn btn-outline-primary mb-3" style=" display: block;width: 30%; height:30%">Sửa đổi</a>
            <button onclick="doDelete(`@Model.QuizId`);" class="btn btn-outline-danger" style=" display: block;width: 30%; height:30%">Xóa</button>
            <a href="/Manage/QuizList" class="btn btn-outline-primary mb-3" style=" display: block;width: 30%; height:30%">Về danh sách</a>
        </div>
    </div>

    <script src="~/js/DeleteQuiz.js"></script>
    <script src="~/js/LoadAnimations.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script>
</body>
</html>