        <main>
            <div class="recent-order-list mt-3">
                <h1 class="title" style="text-align: center;font-weight: bold;">Sửa đổi thông tin</h1>
                <hr />
                <div class="row">

                    <form asp-controller="Quiz" asp-action="Edit" id="quiz-form" onsubmit="submitForm();">
                        <div class="form-group">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="QuizId" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Tên bộ đề</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="LicenseId" class="control-label">Hạng bằng lái</label>
                            <select asp-for="LicenseId" class="form-control" asp-items="ViewBag.LicenseId"></select>
                            <span asp-validation-for="LicenseId" class="text-danger"></span>
                        </div>



                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Thông tin thêm</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <h2 style="text-align: center; font-weight: bold;">Các Câu Hỏi Của Đề</h2>
                        <br />
                        <table>
                            <thead>
                                <tr>
                                    <th>Câu số</th>
                                    <th style="text-align: left">Câu hỏi</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (Model.Questions.Count == 0)
                                    {
                                        <tr>
                                            <td>0</td>
                                            <td style="text-align: left">Lỗi! Chưa có câu hỏi liên kết  với quiz</td>
                                            <td></td>
                                        </tr>
                                    }
                                    int n = 1, i = 0;
                                    foreach (var item in Model.Questions)
                                    {
                                        <tr id="quest-@item.QuestionId">
                                            <td>
                                                Câu @n
                                                <input type="hidden" asp-for="@item.QuestionId" name="Question[@i].QuestionId" />
                                            </td>
                                            <td style="text-align:left;max-width:370px">
                                                @item.QuestionText
                                            </td>
                                            <td class="primary">
                                                <a class="btn btn-outline-danger" onclick="doSelected('@item.QuestionId')" style="max-width:70px">
                                                    Xóa
                                                </a>
                                            </td>
                                        </tr>
                                        n++; i++;
                                    }
                                    <tr>
                                        <td></td>
                                        <td>
                                            <a class="btn btn-outline-primary">
                                                Thêm câu hỏi +
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="form-group mt-5" style="display: flex;justify-content: space-between;">
                            <input type="submit" value="Lưu thay đổi" class="btn btn-outline-success mb-3" style="width: 30%;" />
                            <a href="/Manage/QuizDetail?quizid=@Model.QuizId" class="btn btn-outline-danger mb-3" style="margin:0;width: 30%;">Hủy thay đổi</a>
                            <a href="/Manage/QuizList" class="btn btn-outline-primary mb-3" style="margin:0;width: 30%;">Về danh sách</a>
                        </div>
                    </form>
                    <hr />
                </div>
            </div>
        </main>
    </section>

