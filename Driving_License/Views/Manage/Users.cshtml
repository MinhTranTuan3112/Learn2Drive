                    </span>
                    <h3 class="lead">Logout</h3>
                </a>
            </div>
        </aside>

        <main>
            <h1>Các Người Dùng</h1>
            <form action="/Manage/SearchUser" method="get">
                <div class="input-group mt-5">
                    <div class="input-group-text search-input" style="display:flex">Tìm Kiếm</div>
                    <input type="text" class="form-control" name="name" placeholder="Nhập tên cần tìm...">
                    <button type="submit" class="btn btn-outline-primary search-input">
                        <span class="material-symbols-outlined">
                            search
                        </span>
                    </button>
                </div>
            </form>
            <br />
            <div class="buttons" style="display: flex;justify-content: space-between;">
                <a asp-action="" class="btn btn-outline-primary mb-3">Về Trang Chủ</a>
                <a asp-action="CreateUser" class="btn btn-outline-primary mb-3">Tạo người dùng mới</a>
            </div>

            <!--   <div class="form-group">  -->
            <!--		Show Numbers Of Rows 		-->
            <!--   <select class="form-control" name="state" id="maxRows">  -->
            <!--     <option value="5">5 Đề</option>   -->
            <!--     <option value="10">10 Đề</option>   -->
            <!--    <option value="15">15 Đề</option>   -->
            <!--    <option value="20">20 Đề</option>   -->
            <!--     <option value="50">50 Đề</option>  -->
            <!--    <option value="70">70 Đề</option>  -->
            <!--    <option value="100">100 Đề</option>   -->
            <!--    <option value="5000">Hiện Tất Cả</option>   -->
            <!-- </select>  -->
            <!-- </div>   -->
            <!--Nguoi Dung LIST-->
            <div class="recent-order-list mt-3">
                <h2 style="text-align: center; font-weight: bold;">Danh sách người dùng</h2>
                <hr />
                <table id="table-info">
                    <thead>
                        <tr>
                            <th>Avatar</th>
                            <th>Họ Tên</th>
                            <th>Email</th>
                            <th>Ngày sinh</th>
                            <th>Quốc Tịch</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="~/img/user/user.png" class="mt-3 mb-3" style="max-height:100px; max-width:100px;margin-left:10px; border-radius:100%" /></td>
                                <td>@item.FullName</td>
                                <td>@item.Email</td>
                                <td>@item.BirthDate</td>
                                <td>@item.Nationality</td>
                                <td class="primary" style="max-width:80px">
                                    <a href="/Manage/UserDetail?userid=@item.UserId" class="btn btn-outline-primary mb-3" style="margin-left:5px;margin-right:5px;max-width:80px">
                                        Chi Tiết
                                    </a>
                                </td>
                                <td class="primary" style="max-width:60px;">
                                    <button onclick="doDelete('@item.UserId');" class="btn btn-outline-danger" style="margin-left:5px;margin-right:10px;max-width:60px">
                                        Xóa
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="pagination-container">
                    <nav>
                        <ul class="pagination">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item" data-page="prev">
                                    <a class="page-link" href="@Url.Action("UserList", new { page = Model.PageNumber - 1 })" aria-label="Previous">
                                        <span aria-hidden="true">«</span>
                                    </a>
                                </li>
                            }

                            @for (var i = 1; i <= Model.PageCount; i++)
                            {
                                if (i == Model.PageNumber)
                                {
                                    <li class="page-item active"><a class="page-link" href="@Url.Action("UserList", new { page = i })">@i</a></li>
                                }
                                else
                                {
                                    <li class="page-item"><a class="page-link" href="@Url.Action("UserList", new { page = i })">@i</a></li>
                                }
                            }

                            @if (Model.HasNextPage)
                            {
                                <li class="page-item" data-page="next" id="prev">
                                    <a class="page-link" href="@Url.Action("UserList", new { page = Model.PageNumber + 1 })" aria-label="Next">
                                        <span aria-hidden="true" class="sr-only">»</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>

            </div>
        </main>

    </section>

    <script src="~/js/ManageUser.js"></script>
    <script src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js'></script>
    <script src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js'></script>
</body>

