                    <span class="message-count">26</span>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        add
                    </span>
                    <h3 class="lead">Products</h3>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        report_gmailerrorred
                    </span>
                    <h3 class="lead">Reports</h3>
                </a>
                <!--First-->
                <a href="">
                    <span class="material-symbols-outlined">
                        settings
                    </span>
                    <h3 class="lead">Settings</h3>
                </a>

                <!--Home-Page-->
                <a href="home.html" class="sidebar-menu-item">
                    <span class="material-symbols-outlined">
                        home
