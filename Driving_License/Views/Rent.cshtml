@using Driving_License.Models; 
@inject Driving_License.Utils.DrivingLicenseContext dbcontext;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--bootstrap css file-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <!--font css files-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@200;300&display=swap" rel="stylesheet">
    <!--custom css files-->
    <link rel="stylesheet" href="/css/styleRent.css">
    <title>L2D - Thuê Xe</title>
</head>

<body>
    <div class="container-fluid" style="margin-top:100px">
        <h1 class="title text-center">Dịch vụ</h1>
        <section class="filter-section shadow p-3 mb-5 rounded">
            <form action="/Rent/SearchVec" method="post" class="row justify-content-between">
                <aside class="left-filter col-md-4 col-sm-6">
                    <div class="input-group mb-3">
                        <span class="input-group-text" for="type">Loại xe</span>
                        <select name="type" id="type" class="form-select">
                            <option value="" selected>Chọn loại xe</option>
                            @foreach (string s in dbcontext.Vehicles.Select(v => v.Type).Distinct().ToList())
                            {
                                <option value="@s">@s</option>
                            }
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" for="brand">Hãng xe</span>
                        <select name="brand" id="brand" class="form-select">
                            <option value="" selected>Chọn hãng xe</option>
                            @foreach (string s in dbcontext.Vehicles.Select(v => v.Brand).Distinct().ToList())
                            {
                                <option value="@s">@s</option>
                            }
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <label for="price" class="form-label">Giá thuê: 0 - <span class="price-value">1.000.000</span>&nbsp;VNĐ
                        </label>
                        <input type="range" name="price" id="price" min="0" max="1000000" value="1000000" class="form-range">
                    </div>
                </aside>
                <aside class="right-filter col-md-4 col-sm-6">
                    <div class="form-floating mb-3">
                        <input type="text" name="keyword" id="keyword" class="form-control" placeholder="Search here">
                        <label for="keyword" class="form-label">Nhập từ khóa ở đây</label>
                    </div>
                    <button type="submit" class="btn btn-outline-success search-button">Tìm kiếm</button>
                </aside>
            </form>
            
        </section>
        @foreach (var vechicle in ViewBag.Vehicles)
        {
            <div class="rent-card row">
                <div class="card-img col-md-4"><img src="/img/vehicle/@vechicle.Image" alt="" class="img-fluid"></div>
                <div class="col-md-8">
                    <div class="card-title" style="font-size: large;">
                        <div class="vehicle-name">@vechicle.Name</div>
                            @if (vechicle.Status == true)
                            {
                                <div class="status">Chưa có người đặt</div>
                            }
                            else
                            {
                                <div class="status">Đã có người đặt</div>
                            }

                    </div>
                    <div class="card-content row mt-2">
                        <div class="seat-num col-md-6"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="mb-1 bi bi-car-front-fill" viewBox="0 0 16 16">
                            <path d="M2.52 3.515A2.5 2.5 0 0 1 4.82 2h6.362c1 0 1.904.596 2.298 1.515l.792 1.848c.075.175.21.319.38.404.5.25.855.715.965 1.262l.335 1.679c.033.161.049.325.049.49v.413c0 .814-.39 1.543-1 1.997V13.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-1.338c-1.292.048-2.745.088-4 .088s-2.708-.04-4-.088V13.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-1.892c-.61-.454-1-1.183-1-1.997v-.413a2.5 2.5 0 0 1 .049-.49l.335-1.68c.11-.546.465-1.012.964-1.261a.807.807 0 0 0 .381-.404l.792-1.848ZM3 10a1 1 0 1 0 0-2 1 1 0 0 0 0 2Zm10 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2ZM6 8a1 1 0 0 0 0 2h4a1 1 0 1 0 0-2H6ZM2.906 5.189a.51.51 0 0 0 .497.731c.91-.073 3.35-.17 4.597-.17 1.247 0 3.688.097 4.597.17a.51.51 0 0 0 .497-.731l-.956-1.913A.5.5 0 0 0 11.691 3H4.309a.5.5 0 0 0-.447.276L2.906 5.19Z"/>
                          </svg> @vechicle.Type
                        </div>
                        <div class="address col-md-6">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="mb-1 bi bi-geo-alt" viewBox="0 0 16 16">
                                <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z"/>
                                <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                              </svg> @vechicle.Address
                        </div>
                        <div class="price col-md-6 mt-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="mb-1 bi bi-currency-dollar" viewBox="0 0 16 16">
                                <path d="M4 10.781c.148 1.667 1.513 2.85 3.591 3.003V15h1.043v-1.216c2.27-.179 3.678-1.438 3.678-3.3 0-1.59-.947-2.51-2.956-3.028l-.722-.187V3.467c1.122.11 1.879.714 2.07 1.616h1.47c-.166-1.6-1.54-2.748-3.54-2.875V1H7.591v1.233c-1.939.23-3.27 1.472-3.27 3.156 0 1.454.966 2.483 2.661 2.917l.61.162v4.031c-1.149-.17-1.94-.8-2.131-1.718H4zm3.391-3.836c-1.043-.263-1.6-.825-1.6-1.616 0-.944.704-1.641 1.8-1.828v3.495l-.2-.05zm1.591 1.872c1.287.323 1.852.859 1.852 1.769 0 1.097-.826 1.828-2.2 1.939V8.73l.348.086z"/>
                              </svg> @vechicle.RentPrice/4 giờ
                        </div>
                        <div class="phonenumber col-md-6 mt-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="mb-1 bi bi-telephone" viewBox="0 0 16 16">
                                <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"/>
                                </svg> @vechicle.ContactNumber
                        </div>
                    </div>
                    <button type="button" class="btn btn-outline-primary mt-2 order-btn" onclick="window.location.href='/Rent/RentVechicle?vechicleid=@vechicle.VehicleId'">Thuê</button>
                    </div>
            </div>
            }
        
        </section>
        
    </div>


    <script>
        function FormatNumber(number) {
            // Convert the number to a string
            let numStr = number.toString();

            // Split the string into groups of 3 digits
            let parts = [];
            while (numStr.length > 3) {
                parts.unshift(numStr.slice(-3));
                numStr = numStr.slice(0, -3);
            }
            parts.unshift(numStr); // Add any remaining digits

            // Join the groups with a dot and return the result
            return parts.join('.');
        }
        var priceInput = document.getElementById('price');
        var priceValue = document.querySelector('.price-value');
        priceInput.addEventListener('input', function () {
            priceValue.textContent = FormatNumber(priceInput.value);
        });
    </script>
    <script src="js/LoadAnimations.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
</body>

</html>