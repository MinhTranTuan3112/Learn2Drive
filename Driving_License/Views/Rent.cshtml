@using Driving_License.Models;
@using Driving_License.ViewModels;
@model Driving_License.ViewModels.RentViewModel;
@using System.Globalization;
@using X.PagedList.Mvc.Core;

@{
    ViewData["Title"] = "L2D - Thuê xe";
    int currentPage = (int)ViewBag.currentPage;
    int totalPageCount = (int)ViewBag.totalPage;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600&family=Open+Sans&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="~/css/Rentpage.css">
    <title>L2D - Rent car</title>
</head>


<body>
    <main>
        <article>
            <section class="section hero" id="home">
                <div class="container">

                    <div class="hero-content">
                        <h2 class="h1 hero-title">Learn<span class="danger">2</span>Drive</h2>
                        <p class="hero-text">
                            Xe không có thắng – chạy thẳng vào hòm.
                        </p>
                    </div>
                    <div class="hero-banner"></div>
                    <form action="/Rent/SearchVec" method="post" class="hero-form">
                        <div class="input-wrapper">
                            <label for="input-1" class="input-label">Name</label>

                            <input type="text" name="keyword" id="input-1" class="input-field"
                                placeholder="Bạn đang tìm xe gì?">
                        </div>

                        <div class="input-wrapper">
                            <label for="input-2" class="input-label">Type</label>
                            <select name="type" id="type" class="form-select">
                                <option value="">---Choose Type---</option>
                                @foreach (var type in @Model.TypeList)
                                {
                                    <option value="@type">@type</option>
                                }
                            </select>
                        </div>
                        <div class="input-wrapper">
                            <label for="input-3" class="input-label">Brand</label>

                            <select name="brand" id="brand" class="form-select">
                                <option value="">---Choose brand---</option>
                                @foreach (var brand in @Model.BrandList)
                                {
                                    <option value="@brand">@brand</option>
                                }
                            </select>
                        </div>
                        <button onclick="" type="submit" class="btn">Tìm kiếm</button>
                    </form>
                </div>
            </section>
            <!--
              - #RENT CAR
            -->

            <section class="section rent-car" id="rent-car">
                <div class="container">

                    <div class="title-wrapper">
                        <h2 class="h2 section-title">Car List</h2>
                    </div>
                    <ul class="rent-car-list">
                        @if (@Model.VehicleList is not null && @Model.VehicleList.Count() > 0)
                        {
                            @foreach (var vechicle in @Model.VehicleList)
                            {
                                <form action="/Rent/RentDetail" method="post">
                                    <input type="hidden" name="carid" value="@vechicle.VehicleId" />
                                    <li>
                                        <div class="rent-car-card">

                                            <figure class="card-banner">
                                                <img src="/img/vehicle/@vechicle.Image" loading="lazy" width="440" height="300"
                                                    class="w-100">
                                            </figure>

                                            <div class="card-content">

                                                <div class="card-title-wrapper">
                                                    <h3 class="h3 card-title">
                                                        <a href="/Rent/RentDetail?carid=@vechicle.VehicleId">@vechicle.Name</a>
                                                    </h3>

                                                    <data class="year" value="2021">@vechicle.Years</data>
                                                </div>

                                                <ul class="card-list">

                                                    <li class="card-list-item">
                                                        <ion-icon name="people-outline"></ion-icon>

                                                        <span class="card-item-text">@vechicle.Type</span>
                                                    </li>

                                                    <li class="card-list-item">
                                                        <ion-icon name="business-outline"></ion-icon>

                                                        <span class="card-item-text">@vechicle.Brand</span>
                                                    </li>

                                                    <li class="card-list-item">
                                                        <ion-icon name="compass-outline"></ion-icon>

                                                        <span class="card-item-text">@vechicle.Address</span>
                                                    </li>

                                                    <li class="card-list-item">
                                                        <ion-icon name="create-outline"></ion-icon>
                                                        @if (@vechicle.Status == true)
                                                        {
                                                            <span class="card-item-text">Chưa có người đặt</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="card-item-text">Đã có người đặt</span>
                                                        }
                                                    </li>

                                                </ul>

                                                <div class="card-price-wrapper">
                                                    @{
                                                        string convertmoney = string.Format(new CultureInfo("vi-VN"), "{0:#,##0}",
                                                        vechicle.RentPrice);
                                                    }
                                                    <p class="card-price">
                                                        <strong>$@convertmoney </strong>/ Giờ
                                                    </p>
                                                    <button href="/Rent/RentDetail?carid=@vechicle.VehicleId" class="btn">Thuê
                                                        ngay</button>
                                                </div>

                                            </div>
                                        </div>
                                    </li>
                                </form>
                            }
                        }
                    </ul>
                </div>
            </section>
        </article>
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <button class="page-link" onclick="prevPage();">Previous</button>
                @{
                    int count = (@ViewBag.vehiclecount / 6) + 1;
                }
                @for (var i = 1; i <= count; i++)
                {
                    <li class="page-item"><a class="page-link" href="?page=@i">@i</a></li>
                }
                <button class="page-link" onclick="nextPage();">Next</button>
            </ul>
        </nav>
    </main>

    <script>
        var currentPage = @currentPage;
        var totalPageCount = @totalPageCount;
        function nextPage() {
            if (currentPage === totalPageCount) {
                window.location = '/Rent/Index?page=1';
                return;
            }
            var nextPage = parseInt(currentPage) + 1;
            window.location = '/Rent/Index?page=' + nextPage;
        }
        function prevPage() {
            if (currentPage <= 1) {
                window.location = '/Rent/Index?page=' + parseInt(totalPageCount);
                return;
            }
            var prevPage = parseInt(currentPage) - 1;
            window.location = '/Rent/Index?page=' + prevPage;
        }
    </script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="~/js/Rent.js"></script>
</body>

</html>
