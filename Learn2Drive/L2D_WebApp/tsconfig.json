{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "lib": [ "DOM", "ES2015" ],
    "target": "es5",
    "strict": false,
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "wwwroot/js"
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ],
  "include": [ "Scripts/**/*" ],
  "compileOnSave": true
}
